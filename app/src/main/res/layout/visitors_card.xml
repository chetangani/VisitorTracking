<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:foreground="?android:selectableItemBackground"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/visitors_card_image"
            android:layout_width="95dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp" >

            <TextView
                android:id="@+id/visitor_card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chetan"
                android:layout_marginTop="2dp"
                android:textStyle="bold"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/visitor_card_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chetan"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/visitor_card_name"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/visitor_card_tomeet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chetan"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/visitor_card_number"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/visitor_card_check_in_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chetan"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/visitor_card_tomeet"
                android:layout_weight="1" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>